<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mpdproject.gcu.me.org.assignmenttest1.activity_menu">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity = "center">

        <TextView
            android:id="@+id/menuText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="What would like to know today! Please click any of following buttons for more information"
            android:gravity = "center"
            />
        <Button
            android:id="@+id/incidentsButton"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Current Incidents"
            />
        <Button
            android:id="@+id/roadworksButton"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Roadworks"
            />
        <Button
            android:id="@+id/plannedRoadworksButton"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Planned Roadworks"
            />
        <Button
            android:id="@+id/floodlineButton"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Floodline"
            />
    </LinearLayout>
</ScrollView>
